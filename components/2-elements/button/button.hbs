<!--Buttons General-->

<div class="row" style="margin:0 0 15px 0;">
  <div class="col-sm-3 col-xs-12">
  <p class="m-top">{{ text }}</p>

  <div style="display:block;">
    <button class="btn btn--green">{{button}}</button>
  </div>
  <p class="m-top">{{ text-sec }}</p>
    <div style="display:block;">
      <button class="btn btn--blue">{{button}}</button>
    </div>
</div>

<div class="col-sm-3 col-xs-12">
  <p class="m-top">{{ text-origin }}</p>
    <button class="btn ns btn--green">{{button}}</button>
  <p class="m-top">{{ text-sec-origin }}</p>
    <button class="btn ns btn--blue">{{button}}</button>
</div>
</div>

